---
import Layout from '../layouts/Layout.astro';
import Converter from '../components/Converter.astro';

const title = "No Upload HEIC to JPG Converter - PrivateConvert";
const description = "Convert HEIC to JPG without uploading your photos. Private, secure, and offline-capable converter that runs in your browser.";
const url = "/heic-to-jpg-no-upload/";
---

<Layout title={title} description={description} url={url}>
  <section style="text-align: center; margin-bottom: 2rem;">
    <h1 style="font-size: 2.5rem; margin-bottom: 0.5rem; letter-spacing: -0.025em; color: var(--text);">HEIC to JPG <span style="color: var(--primary);">No Upload</span></h1>
    <p style="font-size: 1.125rem; color: var(--muted); max-width: 600px; margin: 0 auto;">
      Privacy-first conversion. Your photos never leave your device.
    </p>
  </section>

  <Converter />
</Layout>
