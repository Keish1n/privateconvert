---
import Layout from '../layouts/Layout.astro';
import Converter from '../components/Converter.astro';

const title = "Bulk HEIC to JPG Converter - PrivateConvert";
const description = "Batch convert HEIC files to JPG format. Select multiple files and download them as a ZIP archive. Fast and free.";
const url = "/bulk-heic-to-jpg/";
---

<Layout title={title} description={description} url={url}>
  <section style="text-align: center; margin-bottom: 2rem;">
    <h1 style="font-size: 2.5rem; margin-bottom: 0.5rem; letter-spacing: -0.025em; color: var(--text);">Bulk HEIC to JPG <span style="color: var(--primary);">Converter</span></h1>
    <p style="font-size: 1.125rem; color: var(--muted); max-width: 600px; margin: 0 auto;">
      Convert hundreds of HEIC photos at once. Download as ZIP.
    </p>
  </section>

  <Converter />
</Layout>
